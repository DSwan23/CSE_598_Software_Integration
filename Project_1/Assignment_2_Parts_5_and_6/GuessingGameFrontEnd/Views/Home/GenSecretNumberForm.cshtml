@model GuessingGameFrontEnd.Models.SecretNumberModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Generate a Secret Number</title>
</head>
<body>
    <form class="p-a-1" asp-action="GenSecretNumberForm" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="LowerBound">Lower Bound:</label>
            <input class="form-control" asp-for="LowerBound" />
        </div>
        <div class="form-group">
            <label asp-for="UpperBound">Upper Bound:</label>
            <input class="form-control" asp-for="UpperBound" />
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Generate a Secret Number</button>
        </div>
    </form>
</body>
</html>
